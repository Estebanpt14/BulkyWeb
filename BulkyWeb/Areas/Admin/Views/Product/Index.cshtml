@model List<Product>
<div class="container">
  <div class="row pt-4 pb-3">
    <div class="col-6">
      <h2 class="text-primary">
        Products
      </h2>
    </div>
    <div class="col-6 text-end">
      <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Create new Product
      </a>
    </div>
  </div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>
        Product Title
      </th>
      <th>
        Product ISBN
      </th>
      <th>
        Product Author
      </th>
      <th>
        Product Price
      </th>
      <th>Category</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @item.Title
        </td>
        <td>
          @item.ISBN
        </td>
        <td>
          @item.Author
        </td>
        <td>
          @item.Price
        </td>
        <td>
        </td>
        <td>
          <div class="w-100 btn-group" role="group">
            <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-primary mx-2">
              <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-delete mx-2">
              <i class="bi bi-trash3-fill"></i> Delete
            </a>
          </div>
        </td>
      </tr>
    }
  </tbody>
</table>